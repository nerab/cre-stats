#!/usr/bin/env ruby

require 'bundler'
Bundler.require

include CRE::Stats
cre_fetcher = Fetcher.new
episodes = Episodes.new(cre_fetcher)
#guests = CRE::Stats::Guests.new(cre_fetcher)
#comments = CRE::Stats::Comments.new(cre_fetcher)

result = Jbuilder.encode do |json|
  Presenters::Presenter.to_json(json, episodes)
end

puts result
